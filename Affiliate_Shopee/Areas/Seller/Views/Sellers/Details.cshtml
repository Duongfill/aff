@model Affiliate_Shopee.Models.Seller

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Seller/Views/Shared/_Layout_Seller.cshtml";
}

<div class="container-fluid">
    <div class="row mt-3">
        <div class="col-md-6">
            <h4 style="font-weight:700">Thông tin shop </h4>
        </div>
    </div>
    <div style="background-color:#f5f5f5;margin:2px;padding:10px">
        <div class="card shadow">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">
                        Ảnh FaceBook:
                    </dt>
                    <dd class="col-sm-10">
                        <img src="~/image/imagefacebook/@Model.Img" alt="Ảnh facebook" class="img-fluid" style="width:200px">
                    </dd>
                    <dt class="col-sm-2">
                        Tên cửa hàng:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.NameShop)
                    </dd>
                    <dt class="col-sm-2">
                        Link FaceBook:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Linkfb)
                    </dd>
                    <dt class="col-sm-2">
                        Thời gian đăng ký:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CreatedAt)
                    </dd>
                </dl>
            </div>
            
        </div>
    </div>
</div>
