@model X.PagedList.IPagedList<Affiliate_Shopee.Models.AspNetUser>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_admin.cshtml";
    var i = 1;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="~/css/sellerDealIndex.css" />
<div class="container-fluid">
    <div class="row mt-3 mb-4">
        <div class="col-md-6">
            <h4>Quản lý Khách hàng</h4>
            <div id="toast-container" class="toast-top-right"></div>
        </div>
    </div>
    <div style="background-color:#f5f5f5;margin:5px;padding:10px">
        <div class="row mb-4" style="justify-content:center;">
            <div class="col-md-2" style="padding-right:0px">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" id="phonenumber" placeholder="Nhập số điện thoại" data-page-number="@Model.PageNumber">
                </div>
            </div>
            <div class="col-md-2" style="padding-right:0px">
                <div class="input-group mb-3">
                    <select id="statusDropdown" class="form-select" style="width:100%;" data-page-number="@Model.PageNumber">
                        <option value="">Chọn trạng thái</option>
                        <option value="Đang hoạt động">Đang hoạt động</option>
                        <option value="Ngừng hoạt động">Ngừng hoạt động</option>
                        <option value="All">Tất cả</option>
                    </select>
                </div>
            </div>
            <div class="col-md-2" style="padding-right:0px">
                <div class="input-group mb-3">
                    <select id="statusDropdown1" class="form-select" style="width:100%;" data-page-number="@Model.PageNumber">
                        <option value="">Chọn vai trò</option>
                        <option value="Admin">Admin</option>
                        <option value="Người bán">Người bán</option>
                        <option value="Người mua">Người mua</option>
                        <option value="Nhân viên hỗ trợ">Nhân viên hỗ trợ</option>
                        <option value="All">Tất cả</option>
                    </select>
                </div>
            </div>
            <div class="col-md-2">
                <div class="input-group">
                    <button id="filterButton" class="btn btn-primary" style="margin-right:5px;"><i class="fa-solid fa-magnifying-glass"></i></button>
                    <button id="cancelButton" class="btn btn-danger"><i class="fa-solid fa-rotate-right"> </i></button>
                </div>
            </div>
            <div class="col-md-2">
                <div class="input-group">
                    <a asp-area="Admin" asp-controller="AspNetUsers" asp-action="Create" class="form-control" style="background-color:#2742A2;border-radius:10px;color:#fff;text-decoration:none">
                        <i class="fa-solid fa-circle-plus"></i> Thêm người dùng
                    </a>
                </div>
            </div>
        </div>

        <div class="card shadow">
            <div class="card-body">
                <div class="row justify-content-center">
                    <div class="col-auto">
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center">
                                @if (Model.HasPreviousPage)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Index", new { page = Model.PageNumber - 1,phonenumber = ViewBag.Phonenumber, status = ViewBag.Status,discriminator = ViewBag.Discriminator })" aria-label="Previous">
                                            <span aria-hidden="true">&laquo;</span>
                                        </a>
                                    </li>
                                }
                                @for (var pageNumber = 1; pageNumber <= Model.PageCount; pageNumber++)
                                {
                                    <li class="page-item @(pageNumber == Model.PageNumber ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("Index", new { page = pageNumber,phonenumber = ViewBag.Phonenumber, status = ViewBag.Status, discriminator = ViewBag.Discriminator })">@pageNumber</a>
                                    </li>
                                }
                                @if (Model.HasNextPage)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Index", new { page = Model.PageNumber + 1,phonenumber = ViewBag.Phonenumber, status = ViewBag.Status,discriminator = ViewBag.Discriminator})" aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" style="text-align:center">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Họ và tên</th>
                                <th>Email</th>
                                <th>Số điện thoại</th>
                                <th>Trạng thái</th>
                                <th>Vai trò</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@(((Model.PageNumber - 1) * Model.PageSize) + (i))</td>
                                        <td>@(item.Name)</td>
                                        <td>@item.Email</td>
                                        <td>@item.PhoneNumber</td>
                                        <td>
                                            <div class="toggle-switch">
                                                @if (item.Status == "Ngừng hoạt động")
                                                {
                                                    <input type="checkbox" id="toggle-@item.Id" class="toggle-input" data-id="@item.Id" data-status="@item.Status" onchange="updateStatusReason(this)">
                                                }
                                                else if (item.Status == "Đang hoạt động")
                                                {
                                                    <input type="checkbox" id="toggle-@item.Id" class="toggle-input" checked="checked" data-id="@item.Id" data-status="@item.Status" onchange="updateStatusReason(this)">
                                                }
                                                <label for="toggle-@item.Id" class="toggle-label"></label>
                                            </div>
                                        </td>
                                        <td>@item.Discriminator</td>
                                    </tr>
                                    i++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" style="text-align: center;">Không có dữ liệu.</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-auto">
                        <nav aria-label="Page navigation">
                            <ul class="pagination">
                                @if (Model.HasPreviousPage)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Index", new { page = Model.PageNumber - 1,phonenumber = ViewBag.Phonenumber, status = ViewBag.Status,discriminator = ViewBag.Discriminator })" aria-label="Previous">
                                            <span aria-hidden="true">&laquo;</span>
                                        </a>
                                    </li>
                                }
                                @for (var pageNumber = 1; pageNumber <= Model.PageCount; pageNumber++)
                                {
                                    <li class="page-item @(pageNumber == Model.PageNumber ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("Index", new { page = pageNumber,phonenumber = ViewBag.Phonenumber, status = ViewBag.Status, discriminator = ViewBag.Discriminator })">@pageNumber</a>
                                    </li>
                                }
                                @if (Model.HasNextPage)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Index", new { page = Model.PageNumber + 1,phonenumber = ViewBag.Phonenumber, status = ViewBag.Status,discriminator = ViewBag.Discriminator})" aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
    {
    <script src="~/js/AdminUserIndex.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
}

