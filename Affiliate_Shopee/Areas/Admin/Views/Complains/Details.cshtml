@model Affiliate_Shopee.Models.Complain
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_admin.cshtml";
    var i = 1;
}


<link rel="stylesheet" href="~/css/sellerDealIndex.css" />
<div class="container-fluid">
    <div class="row mt-3 mb-4">
        <div class="col-md-6">
        </div>
    </div>
    <div style="background-color:#f6f9ff;margin:5px;padding:10px">
        <div class="card shadow">
            <div class="card-body" style="box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;">
                <div>
                    <h4>Thông tin chi tiết khiếu nại</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            Hình ảnh:
                        </dt>
                        <dd class="col-sm-10">
                            <img src="~/image/@Model.Order.OrderImages.FirstOrDefault().LinkUrl2" alt="Ảnh đơn hàng" class="img-fluid">
                        </dd>
                        <dt class="col-sm-2">
                            Mã đơn hàng:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Orderid)
                        </dd>
                        <dt class="col-sm-2">
                            Thời gian khiếu nại:
                        </dt>
                        <dd class="col-sm-10">
                            @string.Format("{0:dd/MM/yyyy HH:mm:ss}", Model.Createdat)
                        </dd>
                        <dt class="col-sm-2">
                            Mô tả khiếu nại:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Descriptions)
                        </dd>
                        <dt class="col-sm-2">
                            Trạng thái hiện tại:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Status)
                        </dd>
                    </dl>
                </div>
                <div>
                    @if (Model.Status == "Đã hoàn thành")
                    {

                    }
                    else
                    {
                         <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <select asp-for="Status" class="form-control"  style="width:350px">
                            @if (Model.Status == "Chưa xử lý")
                            {
                                <option value="Đang xử lý">Đang xử lý</option>
                                <option value="Hợp lệ">Hợp lệ</option>
                                <option value="Không hợp lệ">Không hợp lệ</option>
                                <option value="Đã hoàn thành">Đã hoàn thành</option>
                            }
                            else if (Model.Status == "Đang xử lý")
                            {
                                <option value="Hợp lệ">Hợp lệ</option>
                                <option value="Không hợp lệ">Không hợp lệ</option>
                                <option value="Đã hoàn thành">Đã hoàn thành</option>
                            }
                            else if (Model.Status == "Hợp lệ")
                            {
                                <option value="Đang xử lý">Đang xử lý</option>
                                <option value="Không hợp lệ">Không hợp lệ</option>
                                <option value="Đã hoàn thành">Đã hoàn thành</option>
                            }
                            else if (Model.Status == "Không hợp lệ")
                            {
                                <option value="Đang xử lý">Đang xử lý</option>
                                <option value="Hợp lệ">Hợp lệ</option>
                                <option value="Đã hoàn thành">Đã hoàn thành</option>
                            }

                        </select>
                        <br/>
                        <input type="submit"  class="btn btn-primary" value="Xác nhận" />
                    </form>
                    }
                   
                </div>
               
            </div>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-auto">
                        <nav aria-label="Page navigation">
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

