@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/homeIndex.css" />
<section class="awe-section-3">
    <div class="container">
        <div id="box-wrapper" style="background-color: white;">
            <div class="container">
                <div class="row">
                    <div class="details-product clearfix" style="padding-top:20px;">
                        <div class="col-lg-12 col-md-12 col-xs-12">
                            <div>
                                <h3 style="text-align:center">Đổi mật khẩu</h3>
                                
                            </div>
                            <div class="row" style="width:50%;margin:0 auto;">
                                <div class="col-xs-12 col-sm-12 col-md-12" style="margin:0 auto" id="ima">
                                    <form id="change-password-form" method="post">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-floating">
                                            <label asp-for="Input.OldPassword" class="form-label">Mật khẩu hiện tại: <sup style="color:red">*</sup></label>
                                            <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" type="text" aria-required="true" style="border-radius:10px" />
                                            
                                            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                                        </div>
                                        <div class="form-floating">
                                            <label asp-for="Input.NewPassword" class="form-label">Mật khẩu mới: <sup style="color:red">*</sup></label>
                                            <div class="form-label">
                                                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" style="border-radius:10px" />
                                                <span class="input-group-text toggle-password" style="cursor:pointer;"><i class="bi bi-eye-slash"></i></span>
                                            </div>
                                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                                        </div>
                                        <div class="form-floating">
                                            <label asp-for="Input.ConfirmPassword" class="form-label">Nhập lại mật khẩu mới: <sup style="color:red">*</sup></label>
                                            <div class="form-label" >
                                                <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" style="border-radius:10px" />
                                                <span class="input-group-text toggle-password" style="cursor:pointer;"><i class="bi bi-eye-slash"></i></span>
                                            </div>
                                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                        </div>

                                        <button type="submit" class="w-100 btn btn-lg btn-primary" style="border-radius: 10px;background-color:#2742A2;width:100%">Đổi mật khẩu</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
